{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "target": "ES2020",                       // allow private fields, import.meta, etc.
    "module": "ESNext",                       // for Viteâ€™s Rollup build
    "moduleResolution": "nodenext",           // lets TS find deep .d.ts (openid-client, drizzle-orm, etc.)
    "lib": ["ES2020", "DOM"],                 // match the target + browser APIs
    "jsx": "preserve",                        // leave JSX for Vite/React to handle
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     // skip type-checking 3rd-party .d.ts files
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    }
  }
}
